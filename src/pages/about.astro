---
import Headline from '~/components/ui/Headline.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <Headline
    title="普羅程式"
    classes={{
      container: 'max-w-3xl my-8',
      title: 'text-3xl md:text-5xl',
    }}
    subtitle="AI 改變生活，致力於提供更好的服務"
  />

  <div class="max-w-4xl wcontainer mx-auto py-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <img class="w-full h-48 object-cover" src="/path/to/daniel.jpg" alt="Wei-Hua Chien">
        <div class="p-4">
          <h3 class="text-lg font-semibold">簡蔚驊</h3>
          <p class="text-gray-600">CTO / Founder</p>
        </div>
      </div>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <img class="w-full h-48 object-cover" src="/path/to/janette.jpg" alt="Yi Lin">
        <div class="p-4">
          <h3 class="text-lg font-semibold">林一</h3>
          <p class="text-gray-600">CEO / Co-founder</p>
        </div>
      </div>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <img class="w-full h-48 object-cover" src="/path/to/marcel.jpg" alt="Yu-Jay Wang">
        <div class="p-4">
          <h3 class="text-lg font-semibold">王裕傑</h3>
          <p class="text-gray-600">COO</p>
        </div>
      </div>
    </div>
  </div>
</Layout>
